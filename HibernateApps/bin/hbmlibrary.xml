<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "libraydb.LibraryPOJO" table = "LibBooks">
      
      <meta attribute = "class-description">
         This class contains the Library Books detail. 
      </meta>
      
      <id name = "bid" type = "int" column = "bid">
         <generator class="native"/>
      </id>
      
      <property name = "Stream" column = "Stream" type = "string"/>
      <property name = "Bookname" column = "bname" type = "string"/>
      <property name = "copies"  type = "int"/>
      
   </class>
</hibernate-mapping>
